<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="8"
    android:background="@drawable/trans_back"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="@dimen/audience_lifeline_layout_width"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="end"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="13">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/audience_lifeline_textView_height"
                android:layout_weight="1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/audience_lifeline_textView_height"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:paddingStart="@dimen/audience_lifeline_textView_padding"
                android:text="@string/audience_lifeLine_100"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/audience_lifeline_textView_height"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:paddingStart="@dimen/audience_lifeline_textView_padding"
                android:text="@string/audience_lifeLine_90"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/audience_lifeline_textView_height"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:paddingStart="@dimen/audience_lifeline_textView_padding"
                android:text="@string/audience_lifeLine_80"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/audience_lifeline_textView_height"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:paddingStart="@dimen/audience_lifeline_textView_padding"
                android:text="@string/audience_lifeLine_70"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/audience_lifeline_textView_height"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:paddingStart="@dimen/audience_lifeline_textView_padding"
                android:text="@string/audience_lifeLine_60"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/audience_lifeline_textView_height"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:paddingStart="@dimen/audience_lifeline_textView_padding"
                android:text="@string/audience_lifeLine_50"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/audience_lifeline_textView_height"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:paddingStart="@dimen/audience_lifeline_textView_padding"
                android:text="@string/audience_lifeLine_40"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/audience_lifeline_textView_height"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:paddingStart="@dimen/audience_lifeline_textView_padding"
                android:text="@string/audience_lifeLine_30"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/audience_lifeline_textView_height"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:paddingStart="@dimen/audience_lifeline_textView_padding"
                android:text="@string/audience_lifeLine_20"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/audience_lifeline_textView_height"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:paddingStart="@dimen/audience_lifeline_textView_padding"
                android:text="@string/audience_lifeLine_10"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/audience_lifeline_textView_height"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:paddingStart="@dimen/audience_lifeline_textView_padding"
                android:text="@string/audience_lifeLine_0"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/audience_lifeline_textView_height"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:paddingStart="@dimen/audience_lifeline_textView_padding"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <!-- draw white line -->
        <View
            android:layout_width="@dimen/audience_lifeline_view_width"
            android:layout_height="match_parent"
            android:background="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/audience_lifeline_layout_width"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="vertical"
        android:weightSum="11">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/audience_lifeline_textView_height"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="@string/audience_lifeLine_answer"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/audience_lifeline_layout_width"
            android:layout_weight="9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="11">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="top">

                    <!-- draw white line -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/audience_lifeline_view_width"
                        android:background="@android:color/white" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="top">

                    <!-- draw white line -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/audience_lifeline_view_width"
                        android:background="@android:color/white" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="top">

                    <!-- draw white line -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/audience_lifeline_view_width"
                        android:background="@android:color/white" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="top">

                    <!-- draw white line -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/audience_lifeline_view_width"
                        android:background="@android:color/white" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="top">

                    <!-- draw white line -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/audience_lifeline_view_width"
                        android:background="@android:color/white" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="top">

                    <!-- draw white line -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/audience_lifeline_view_width"
                        android:background="@android:color/white" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="top">

                    <!-- draw white line -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/audience_lifeline_view_width"
                        android:background="@android:color/white" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="top">

                    <!-- draw white line -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/audience_lifeline_view_width"
                        android:background="@android:color/white" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="top">

                    <!-- draw white line -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/audience_lifeline_view_width"
                        android:background="@android:color/white" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="top">

                    <!-- draw white line -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/audience_lifeline_view_width"
                        android:background="@android:color/white" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="top">

                    <!-- draw white line -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/audience_lifeline_view_width"
                        android:background="@android:color/white" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/audience_lifeline_layout_width"
                    android:layout_weight="1"
                    android:gravity="top">

                    <!-- draw white line -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/audience_lifeline_view_width"
                        android:background="@android:color/white" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:weightSum="4">

                <RelativeLayout
                    android:layout_width="@dimen/audience_lifeline_layout_width"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <!-- draw white line -->
                    <View
                        android:layout_width="@dimen/audience_lifeline_view_width"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:background="@android:color/white" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:orientation="vertical"
                        android:weightSum="10">

                        <!-- column A votes -->
                        <ImageView
                            android:id="@+id/ia"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginStart="@dimen/audience_lifeline_image_margin"
                            android:layout_marginEnd="@dimen/audience_lifeline_image_margin"
                            android:layout_weight="3"
                            android:background="@color/column_orange"
                            android:contentDescription="@string/audience_lifeLine_column"
                            android:tag="A" />
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/audience_lifeline_layout_width"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <!-- draw white line -->
                    <View
                        android:layout_width="@dimen/audience_lifeline_view_width"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:background="@android:color/white" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:orientation="vertical"
                        android:weightSum="10">

                        <!-- column B votes -->
                        <ImageView
                            android:id="@+id/ib"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginStart="@dimen/audience_lifeline_image_margin"
                            android:layout_marginEnd="@dimen/audience_lifeline_image_margin"
                            android:layout_weight="1"
                            android:background="@color/column_orange"
                            android:contentDescription="@string/audience_lifeLine_column"
                            android:tag="B" />
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/audience_lifeline_layout_width"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <!-- draw white line -->
                    <View
                        android:layout_width="@dimen/audience_lifeline_view_width"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:background="@android:color/white" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:orientation="vertical"
                        android:weightSum="10">

                        <!-- column C votes -->
                        <ImageView
                            android:id="@+id/ic"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginStart="@dimen/audience_lifeline_image_margin"
                            android:layout_marginEnd="@dimen/audience_lifeline_image_margin"
                            android:layout_weight="2"
                            android:background="@color/column_orange"
                            android:contentDescription="@string/audience_lifeLine_column"
                            android:tag="C" />
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/audience_lifeline_layout_width"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <!-- draw white line -->
                    <View
                        android:layout_width="@dimen/audience_lifeline_view_width"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:background="@android:color/white" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:orientation="vertical"
                        android:weightSum="10">

                        <!-- column D votes -->
                        <ImageView
                            android:id="@+id/id"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginStart="@dimen/audience_lifeline_image_margin"
                            android:layout_marginEnd="@dimen/audience_lifeline_image_margin"
                            android:layout_weight="5"
                            android:background="@color/column_orange"
                            android:contentDescription="@string/audience_lifeLine_column"
                            android:tag="D" />
                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/audience_lifeline_layout_width"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/audience_lifeLine_a"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/audience_lifeLine_b"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/audience_lifeLine_c"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/audience_lifeLine_d"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/audience_lifeline_layout_width"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="start"
        android:orientation="horizontal">

        <!-- draw white line -->
        <View
            android:layout_width="@dimen/audience_lifeline_view_width"
            android:layout_height="match_parent"
            android:background="@android:color/white" />

        <!-- okay button -->
        <Button
            android:id="@+id/btn_dismiss"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/audience_lifeline_button_height"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/audience_lifeline_button_margin"
            android:layout_marginEnd="@dimen/audience_lifeline_button_margin"
            android:background="@drawable/inputbutton"
            android:text="@string/audience_lifeLine_okay"
            android:textColor="@drawable/inputbuttontextcolor" />

    </LinearLayout>
</LinearLayout>