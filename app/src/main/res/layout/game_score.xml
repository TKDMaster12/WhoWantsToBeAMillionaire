<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_background"
    android:gravity="bottom"
    android:orientation="vertical"
    android:weightSum="8">

    <!-- image logo -->
    <ImageView
        android:layout_width="@dimen/game_score_ImageView_width"
        android:layout_height="@dimen/game_score_ImageView_height"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/game_score_ImageView_margin"
        android:background="@drawable/millionaire"
        android:contentDescription="@string/game_score_logo" />

    <!-- text message -->
    <TextView
        android:id="@+id/explanation"
        android:layout_width="@dimen/game_score_textView_width"
        android:layout_height="@dimen/game_score_textView_height"
        android:layout_gravity="center"
        android:layout_margin="@dimen/game_score_textView_margin"
        android:layout_weight="2"
        android:background="@drawable/button_inactive"
        android:gravity="center"
        android:textColor="@android:color/white" />

    <!-- amount of money won -->
    <TextView
        android:id="@+id/moneyWon"
        android:layout_width="@dimen/game_score_textView_width2"
        android:layout_height="@dimen/game_score_textView_height"
        android:layout_gravity="center"
        android:layout_margin="@dimen/game_score_textView_margin"
        android:layout_weight="1.5"
        android:background="@drawable/inputbutton"
        android:gravity="center"
        android:textColor="@drawable/inputbuttontextcolor" />

    <!-- main menu button -->
    <Button
        android:id="@+id/homeButton"
        android:layout_width="@dimen/game_score_button_width"
        android:layout_height="@dimen/game_score_button_height"
        android:layout_gravity="center"
        android:layout_margin="@dimen/game_score_button_margin"
        android:layout_weight="1.5"
        android:background="@drawable/inputbutton"
        android:gravity="center"
        android:text="@string/game_score_menu"
        android:textColor="@drawable/inputbuttontextcolor" />

</LinearLayout>