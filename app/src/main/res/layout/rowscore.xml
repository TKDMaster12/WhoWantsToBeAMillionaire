<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:orientation="vertical"
    android:paddingStart="@dimen/row_score_layout_padding"
    android:paddingTop="@dimen/row_score_layout_paddingTop"
    android:paddingEnd="@dimen/row_score_layout_padding">

    <!-- total money earned -->
    <TextView
        android:id="@+id/money"
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_score_textView_height"
        android:background="@drawable/question_container"
        android:gravity="center"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_score_layout_height"
        android:layout_marginTop="@dimen/row_score_layout_margin"
        android:weightSum="3">

        <!-- amount of time taken -->
        <TextView
            android:id="@+id/time"
            android:layout_width="@dimen/row_score_textView_width"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/default_money"
            android:gravity="center"
            android:textColor="@android:color/white" />

        <!-- amount of points earned -->
        <TextView
            android:id="@+id/point"
            android:layout_width="@dimen/row_score_textView_width"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/row_score_textView_margin"
            android:layout_weight="2"
            android:background="@drawable/question_container"
            android:gravity="center"
            android:textColor="@android:color/white" />

    </LinearLayout>
</LinearLayout>